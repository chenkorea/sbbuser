/* ratings.wxss */
.main_view {
  width: 100%;
  height: 100%;
  background: white;
  padding: 20rpx;
}

.title_name {
  width: 100%;
  height: 90rpx;
  font-size: 30rpx;
  font-weight: 200;
  color: #666666;
  padding-bottom: 10rpx;
}

.radio-group {
  margin: 20rpx auto;
}

.ratings_content {
  width: 90%;
  height: 300rpx;
  border: 1rpx solid #F0F0F0;
  font-size: 30rpx;
  font-weight: 200;
  color: #333333;
  padding: 10rpx;
  margin-top: 50rpx;
}

.num_view {
  width: 100%;
  background: #F0F0F0;
  height: 1rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.pay_but {
  height: 90rpx;
  width: 90%;
  background: #396fbf;
  color: white;
  font-size: 30rpx;
  margin: 20rpx 10rpx 10rpx 10rpx;
}