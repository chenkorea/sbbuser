/* pages/my/mine/coupon/coupon.wxss */
.coupon-list-view {
  padding: 20rpx;
  background: #ffffff;
  border-radius: 3%;
  border-bottom: 30rpx solid #F0F0F0;
  margin: 30rpx;
}

.coupon-view {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  border-bottom: 10rpx solid #F0F0F0;
}

.title-text {
  position: relative;
  justify-content: flex-end;
  align-content:center;
  left: 85%;
  font-size: 32rpx;
  color: #333333;
  /* margin-top: 10rpx; */
}

.title-desc {
  position: relative;
  right: 15%;
  justify-content: flex-start;
  font-size: 32rpx;
  color: #333333;
  /* margin-top: 10rpx; */
}

.no_notice-view{
  display: flex; 
  position: absolute;
  height: 100%;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.price-style{
   display: block;
   color: #ffffff;
   position: relative;
   size: 30rpx;
   z-index: 5;
   left: 3%;
   bottom: 100rpx;
   text-align: left;
}