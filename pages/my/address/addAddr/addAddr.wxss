.main-view {
  /*background: #F0F0F0;*/
}

.input {
  width: 100%;
  padding: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.input input {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx 50rpx;
}

.input icon {
  font-size: 26rpx;
  color: #666666;
}

.sub-text {
  font-size: 32rpx;
  color: #333333;
}

.right-view {
  position: absolute;
  right: 20rpx;
}

.type-value {
  font-size: 28rpx;
  color: #666666;
}

.section {
  padding-top: 20rpx;
}

.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: red;
}

.citypicker{
  
}
.citybody {
  position: fixed;
  bottom: 0px;
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
  background: #43CD80;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #FFFFFF;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #FFFFFF
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}

.type-view {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #F0F0F0;
  padding: 0 20rpx;
}

.val-view {
  position: absolute;
  right: 60rpx;
  top: 20rpx;
  display: inline;
  flex: 1;
  font-size: 24rpx;
  color: #666666;
}

.type-nmae {
  width: 40%;
  font-size: 30rpx;
  color: #333333;
}

.type-value {
  width: 80%;
}

.iconfont {
  font-size: 20rpx;
}

.detail-title {
  padding: 20rpx;
  font-size: 30rpx;
  color: #333333;
}

.detail-text {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333333;
  height: 100rpx;
  width: 100%;
  border-bottom: 10rpx solid #F0F0F0;
}