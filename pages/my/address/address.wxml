<view class="main-view">

  <view class="list-view">
    <view class="address-item" wx:for="{{addresses}}" wx:key="{{index}}" data-id="{{item.id}}" >
      <view class="address-text">{{item.text}}</view>
      <view class="oper-view">
        <view class="def-view" data-id="{{item.id}}"  bindtap="setDefAddress">
          <icon class="iconfont {{item.isdef=='1'?'icon-xuanze1':'icon-xuanze'}}" />
          <text>{{item.isdef=='1'?'默认地址':'设为默认'}}</text>
        </view>
        <view class="del-view" data-id="{{item.id}}"  bindtap="delAddress">
          <icon class="iconfont icon-shanchu" />
          <text>删除</text>
        </view>
      </view>
    </view>
  </view>
  <view class="add_view" bindtap="toAddNewAddress">添加新地址</view>
  
</view>