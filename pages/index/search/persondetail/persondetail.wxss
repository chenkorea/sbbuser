/* goodsdetail.wxss */
.title-view {
  padding: 20rpx;
  display: flex;
  justify-content: left;
  color: #FF7F24;
  font-size: 35rpx;
  background: #f5f5f5;
  left: 20rpx;
}

.desc-title-view {
  padding: 20rpx;
  display: flex;
  justify-content: left;
  color: #ffffff;
  font-size: 28rpx;
  left: 20rpx;
  background: #f5f5f5
}

.desc-view {
  padding: 20rpx;
  color: #333333;
  font-size: 28rpx;
  font-weight: 200;
  background: #ffffff;
}

.content-view {
  padding: 34rpx;
  display: flex;
  justify-content: left;
  color: #333333;
  font-size: 28rpx;
  left:20rpx;
  right: 10rpx;
}

.main-view {
  background: #ffffff;
  width: 100%;
}

.slide{
  height: 300rpx;
}

.slide-image{
  background: #ffffff;
  width: 100%;
  height: 100%;
}

.order-status {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-bottom: 1rpx solid #F2F2F2;
  color: #333333;
  font-size: 28rpx;
  height: 100rpx;
}

.or-title {
  width: 160rpx;
  color: #999999;
}

.jiantou-view {
  position: relative;
  display: flex;
  align-items: center;
}

.jiantou {
  position: absolute;
  right: 10rpx;
  top: 35rpx;
  width: 30rpx;
  height: 30rpx;
}