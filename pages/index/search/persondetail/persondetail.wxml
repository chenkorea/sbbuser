<!--goodsdetail.wxml-->
<swiper indicator-dots="{{indicatorDots}}" autoplay="false">
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" model="scaleToFit" style="width: {{imageWidth}}px;" data-url="{{imgUrls[index]}}" bindtap="preview"/>
    </swiper-item>
  </block>
</swiper>
<!--商品信息描述  -->
<view class="title-view">基本信息</view>
<view class="main-view">
<view class="desc-view">姓名  {{name}}</view>
<view class="desc-view">电话  {{phone}}</view>
<view class="desc-view">评级  {{grade}}</view>
<view class="desc-view">服务项目  {{servicetype}}</view>
</view>
