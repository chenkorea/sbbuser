/**index.wxss**/
.main_view {
  background: #FFFFFF;
}

.header_view {
  display: flex;
  height: 100rpx;
  width: 100%;
}

.header_left_view {
  height: 100rpx;
  width: 50%;
  display:flex;
  align-items: center;
}

.user_head {
  vertical-align:middle;
  width: 60rpx;
  height: 60rpx;
  background-size: 60rpx 60rpx;
  background-repeat: no-repeat;
  margin-left: 20rpx;
  border-radius: 50%;
}

.user_name {
  font-size: 27rpx;
  margin-left: 10rpx;

}

.header_right_view {
  flex: 1;
  padding:0 10rpx;
  text-align: right;
}

.location_city {
  font-size: 30rpx;
  line-height: 100rpx;
  height: 100rpx;
}

.ad_top {
  display: flex;
  background: #FF6666;
  height: 60rpx;
  color: #FFF;
  align-items: center;
}

.notice_ic {
  color: #FFFFFF;
  font-size: 20rpx;
}

.notice-text {
  flex: 1;
  height: 30rpx;
  font-size: 25rpx;
}

.ad-bottom .ad-image {
  width: 100%;
  height: 300rpx;
}

.ad-image {
  background-repeat: no-repeat;
  background-size: 100% 300rpx;
}

.page__bd {
  margin-top: 1rpx;
}

.weui-grids {
  border-top: 1rpx solid #FFFFFF;
  border-left: 1rpx solid #FFFFFF;
}
.weui-grid {
  position: relative;
  float: left;
  padding: 40rpx 20rpx;
  width: 33.33333333%;
  box-sizing: border-box;
  border-right: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
}
.weui-grid_active {
  background-color: #ECECEC;
}
.weui-grid__icon {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin-top: 30rpx;
  margin-left: 40%;
  font-size: 30rpx;
  color: white;
}
.weui-grid__label {
  margin-top: 10rpx;
  display: block;
  text-align: center;
  color: #FFFFFF;
  font-size: 30rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.top-icon {
  background: #FF6666;
}

.mid-icon {
  background: #5CACEE;
}

.bottom-icon {
  background: #43CD80;
}

.footer_view {
  background: #FFFFFF;
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-main-ciew {
  display: flex;
  align-items: center;
}

.gonganlogo {
  width: 90rpx;
  height: 90rpx;
  background-size: 90rpx 90rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.gongan-text {
  height: 35rpx;
  font-size: 35rpx;
  color: #666666;
}

.iconfont {
  font-size: 60rpx;
}