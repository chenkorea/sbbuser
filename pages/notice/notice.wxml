<!-- notice.wxml -->
<view class="main-view">
  <!-- <view class="title-view">{{titleText}}</view>
  <view class="content-view">{{contentText}}</view> -->
  <view class="line-view"></view>
  <view wx:if="{{noticecontent.length>0}}">  
    <view class="item_container" wx:for="{{noticecontent}}" wx:key="{{index}}" data-detail="{{noticecontent[index]}}" bindtap="godetail">
      <view class="item_container-content">{{item.content}}</view>
      <view class="item_container-time">{{item.send_time}}</view>
      <view/>
    </view>
  </view>
    <!--如果无数据，则显示数据-->  
    <view wx:else>
      <view class="no_notice-view">暂无通知信息</view>
    </view>  
</view>