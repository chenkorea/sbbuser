<view class="main-view">

  <view class="title-log">
    <image class="lock-log"></image>
    <text class="lock-title">锁帮帮,你身边的开锁专家</text>
  </view>

  <view class="reg-view">
    <text class="reg-title"></text> 
   <view class="user-view">
     <image class="user_img" src="../../images/phone_reg_nos.png"></image>
     <input class="user-text" bindinput="getregname" placeholder="请输入您的手机号" type="number" value="{{username}}"/>
   </view>
   </view>

   <view class="user-view">
     <image class="pwd_img" src="../../images/verify_reg_nos.png"></image>
     <input class="user-text" bindinput="getverifycode" type="number" placeholder="请输入验证码"  value="{{regverifycode}}"/>
      <view class="verifycode-button" bindtap="getcode">获取验证码</view>
   </view>

   <view class="user-view">
     <image class="pwd_img" src="../../images/key_pwd_nor.png"></image>
     <input class="user-text" bindinput="getregpasswd" type="password" placeholder="请输入密码"/>
   </view>

   <view class="user-view">
     <image class="pwd_img" src="../../images/reconform_reg_nos.png"></image>
     <input class="user-text" bindinput="getconformpasswd" type="password" placeholder="再次输入密码"/>
   </view>

   <view class="law-view">
       <icon class="iconfont icon-xuanze1 {{agreeBg}}"  bindtap="chooseagree"/>
       <text class="law-text">我同意《锁帮帮平台服务协议》</text>
  </view>

  <button class="{{register_btn}}" bindtap="bindViewTap">提交</button>

    <view class="register_view">
      <text>已有账户，</text><text class="register_text" bindtap="bindlogin">立即登录</text>
    </view>
  

