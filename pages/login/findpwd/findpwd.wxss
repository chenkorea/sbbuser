.main-view{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: url('http://b.zol-img.com.cn/sjbizhi/images/6/320x510/1395732915539.jpg');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.login-view-bg {
  position: absolute;
  left: 60rpx;
  top: 60rpx;
  bottom: 60rpx;
  right: 60rpx;
  background: #F9F9F9;
  opacity: 0.4; 
}

.login-view {
  position: absolute;
  left: 60rpx;
  top: 160rpx;
  bottom: 60rpx;
  right: 60rpx;
}

.login-title {
  color: #228B22;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}


.input {
  position: absolute;
  top: 0;
  left: 30rpx;
  width: 60%;
  height: 80rpx;
  background: red;
  color: #333333;
}

.iconfont {
  color: #FFF;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.login_btn {
  width: 80%;
  height: 90rpx;
  background: #228B22;
  border-radius: 40rpx;
  color: #FFFFFF;
  margin-left: 60rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
  text-align: center;
}

.register_btn {
  width: 80%;
  height: 90rpx;
  margin-left: 60rpx;
  background: #FF6666;
  border-radius: 40rpx;
  color: #FFFFFF;
  font-size: 30rpx;
  margin-top: 30rpx;
}

.user-view {
  width: 80%;
  height: 90rpx;
  border-radius: 40rpx;
  margin-left: 60rpx;
  margin-top: 50rpx;
  background: #999999;
  font-size: 30rpx;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
}

.pwd-view {
  width: 45%;
  height: 90rpx;
  margin-left: 60rpx;
  border-radius: 40rpx;
  background: #999999;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.forget-text {
  margin-left: 60rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666666;
  border-bottom: 2rpx solid #666666;
}

.user-text {
  position: absolute;
  left: 120rpx;
  top: 75rpx;
  width: 60%;
}

.pwd-text {
  position: absolute;
  left: 70rpx;
  top: 185rpx;
  width: 60%;
}

.send_btn {
  position: absolute;
  top: 165rpx;
  right: 70rpx;
  width: 30%;
  height: 90rpx;
  border-radius: 60rpx;
  background: #FF6666;
  color: #FFFFFF;
  font-size: 30rpx;
}