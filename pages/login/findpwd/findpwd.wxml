<view class="main-view">

  <view class="login-view-bg">
  </view>

  <view class="login-view">
   <view class="user-view">
     <icon class="iconfont icon-wode" />
     <input class="user-text" bindinput="getfogname" placeholder="手机号" type="number" value="{{fogphone}}"/>
   </view>

   <view class="pwd-view">
     <input class="pwd-text" bindinput="getfogcode" placeholder="验证码" value="{{fogcode}}"/>
   </view>

   <button class="send_btn" bindtap="getcode">获取验证码</button>
   <button class="{{nextstep}}" bindtap="bindViewTap">下一步</button>

  </view>
</view>