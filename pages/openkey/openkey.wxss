
.type-view {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #F0F0F0;
  padding: 0 10rpx;
}

.val-view {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: inline;
  flex: 1;
  font-size: 24rpx;
  color: #666666;
}

.type-nmae {
  width: 40%;
  font-size: 30rpx;
  color: #333333;
}

.type-value {
  width: 80%;
  font-size: 28rpx;
}

.iconfont {
  font-size: 20rpx;
}

.save-button {
  height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  color: #FFFFFF;
  font-size: 32rpx;
  background: #43CD80;
  border-radius:0;
}
