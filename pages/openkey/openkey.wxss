
.main-view {
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.type-view {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  border-bottom: 1rpx solid #F0F0F0;
  padding: 0 10rpx;
}

.val-view {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: inline;
  flex: 1;
  font-size: 24rpx;
  color: #666666;
}

.type-nmae {
  width: 40%;
  font-size: 30rpx;
  color: #333333;
}

.type-value {
  width: 200rpx;
  font-size: 28rpx;
}

.iconfont {
  font-size: 20rpx;
}

.save-button {
  margin:20rpx auto;
  height: 100rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  background: #396fbf;
  border-radius:0;
}

.tab_detaul_view {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 30%;
  border: 1rpx solid #B0E0E6;
}

.tab_img {
  display: block;
  text-align: center;
  width: 40rpx;
  margin-left: 23%;
  height: 40rpx;
  margin-top: 5rpx;
}

.tab_text {
  display: block;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #666666;
  font-size: 20rpx;
  margin-top: 5rpx;
}

.info_view {
  float: left;
  width: 25%;
}

.tab_de_view {
  height: 120rpx;
  border-top: 1rpx solid #F0F0F0;
  border-bottom: 20rpx solid #F0F0F0;
  padding: 20rpx 0;
}

.order-info {
  font-size: 28rpx;
  color: 666666;
}

.shuoming-view {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: 666666;
  height: 80rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.bot_view {
  padding-left:20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}


.add-view-text {
  height: 30rpx;
}


.price-view {
  width: 100%;
  position: relative;
  border: 1rpx solid #DBDBDB;
  margin-top: -1rpx;
}


.price-view::after {
  border-top: none;
}

.left-price {
  display: flex;
  font-size: 30rpx;
  color: black;
  width: 40%;
  height: 100rpx;
  text-align: center;
  align-items: center;
  justify-content: center;
  padding: 5rpx;
  border-right: 1rpx solid #DBDBDB;
}

.right-price {
  display: flex;
  position: absolute;
  top: 0;
  left: 40%;
  right: 10%;
  font-size: 30rpx;
  color: black;
  width: 60%;
  height: 100%;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 5rpx;
}